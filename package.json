{
    "name": "@bisect/bisect-core-ts",
    "version": "0.1.0",
    "description": "Common utilities for Typescript projects",
    "author": "Bisect Lda. <info@bisect.pt> (www.bisect.pt)",
    "contributors": [
        {
            "name": "Pedro Ferreira",
            "email": "pedro@bisect.pt"
        }
    ],
    "license": "MIT",
    "private": false,
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "**/*"
    ],
    "scripts": {
        "build": "npm run clean && npm run compile",
        "clean": "rm -rf ./dist",
        "compile": "tsc"
    },
    "devDependencies": {
        "@types/amqplib": "^0.5.16",
        "@types/jest": "^26.0.15",
        "@types/node": "^14.11.2",
        "@types/form-data": "^2.5.0",
        "jest": "^26.6.3",
        "ts-jest": "^26.4.4",
        "typescript": "^4.0.5",
        "@types/socket.io-client": "^1.4.34"
    },
    "dependencies": {
        "amqplib": "^0.6.0",
        "socket.io": "^2.4.0",
        "axios": "^0.19.0"
    },
    "eslintConfig": {
        "extends": [
            "airbnb",
            "plugin:react/recommended",
            "plugin:@typescript-eslint/recommended",
            "prettier/@typescript-eslint",
            "plugin:prettier/recommended"
        ],
        "rules": {
            "@typescript-eslint/no-explicit-any": [
                "error"
            ],
            "@typescript-eslint/explicit-function-return-type": [
                "error"
            ]
        }
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "printWidth": 120
    }
}
